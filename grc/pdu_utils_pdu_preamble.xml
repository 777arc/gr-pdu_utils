<?xml version="1.0"?>
<block>
  <name>PDU Preamble F</name>
  <key>pdu_utils_pdu_preamble</key>
  <category>[Sandia]/PDU Utilities</category>
  <import>import pdu_utils</import>
  <import>import numpy</import>
  <make>pdu_utils.pdu_preamble($preamble, $tail, $interp, $zero_pad, $nrz)</make>

  <callback>set_preamble($preamble)</callback>
  <callback>set_tail($tail)</callback>
  <callback>set_interp($interp)</callback>
  <callback>set_pad($zero_pad)</callback>
  <callback>set_nrz($nrz)</callback>

  <param>
    <name>Preamble</name>
    <key>preamble</key>
    <value>numpy.array([])</value>
    <type>raw</type>
  </param>
  <param>
    <name>Tail</name>
    <key>tail</key>
    <value>numpy.array([])</value>
    <type>raw</type>
  </param>
  <param>
    <name>Interpolation</name>
    <key>interp</key>
    <value>1</value>
    <type>int</type>
  </param>
  <param>
    <name>Pad Size</name>
    <key>zero_pad</key>
    <value>0</value>
    <type>int</type>
  </param>
  <param>
    <name>Encoding</name>
    <key>nrz</key>
    <value>True</value>
    <type>bool</type>
    <hide>part</hide>
    <option>
      <name>None</name>
      <key>False</key>
    </option>
    <option>
      <name>NRZ</name>
      <key>True</key>
    </option>
  </param>

  <check>$interp &gt;= 1</check>
  <check>$zero_pad &gt;= 0</check>

  <sink>
    <name>pdu_in</name>
    <type>message</type>
  </sink>

  <source>
    <name>pdu_out</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <doc>
  	Transforms an incoming PDU by adding a preamble and tail and then perform interpolation and NRZ encoding
  	
  	Configuration:
  		Preamble - array of data inserted before the PDU
  		Tail - array of data inserted after the PDU
  		Interpolation - Interpolation factor of each data point
  		Pad Size - Amount of zero pad to insert at the front and end of the encoded PDU
  		NRZ - Perform NRZ encoding
  	
  	Input:
  		PMT pair of metadata and data. Data is a u8vector
  	Output:
  		PMT pair of metadata and data. Data is a f32vector. Metadata is a copy from input
  </doc>

</block>
