<?xml version="1.0"?>
<block>
  <name>Message Emitter</name>
  <key>pdu_utils_message_emitter</key>
  <category>[Sandia]/PDU Utilities/Debug Utils</category>
  <import>import pdu_utils</import>
  <import>import pmt</import>
  <make>pdu_utils.message_emitter($msg)</make>

  <callback>set_msg(msg)</callback>

  <param>
    <name>Message</name>
    <key>msg</key>
    <value>pmt.PMT_NIL</value>
    <type>raw</type>
  </param>

  <source>
    <name>msg</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <doc>Simple block emits a message when emit() is called.</doc>

</block>
